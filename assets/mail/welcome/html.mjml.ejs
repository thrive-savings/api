<mjml>
  <mj-head>
    <mj-attributes>
      <mj-all padding="0px"></mj-all>
      <mj-class name="preheader" color="#000000" font-size="11px" font-family="Lato, Helvetica, Arial, sans-serif" padding="0px"></mj-class>
    </mj-attributes>
    <mj-style inline="inline">
      a {
        text-decoration: none;
        color: inherit;
      }
    </mj-style>
  </mj-head>
  <mj-body background-color="#D8D8D8">
    <mj-container>
      <mj-section background-color="#0089CB" padding="10px 0">
        <mj-column width="100%">
          <mj-image src="https://s3.ca-central-1.amazonaws.com/public-resources-thrive-ca-central-1/images/logo.png" alt="logo" width="180px" padding="10px 0"></mj-image>
        </mj-column>
        <mj-column width="100%">
          <mj-text align="center" color="#ffffff" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="18px 0px">
            Welcome to Thrive Savings Family
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#fdfdfd" padding-top="20px">
        <mj-column width="100%">
          <mj-text align="left" color="#414042" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="25px 50px">
            Hello
            <%= user.firstName %>, you're almost there! Let's link your accounts to get started.
            <br /><br />By linking your accounts, you can access awesome features like...
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#fdfdfd" padding-top="20px">
        <mj-column width="50%">
          <mj-image width="200" src="https://s3.ca-central-1.amazonaws.com/public-resources-thrive-ca-central-1/images/welcome0.png" />
        </mj-column>
        <mj-column width="50%">
          <mj-text align="left" color="#414042" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="25px 50px">
            Put your savings on auto-pilot. We do the math for you.
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#fdfdfd" padding-top="20px">
        <mj-column width="50%">
          <mj-text align="left" color="#414042" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="25px 50px">
            Tell us which goals are the most important to you.
        </mj-column>
        <mj-column width="50%">
          <mj-image width="200" src="https://s3.ca-central-1.amazonaws.com/public-resources-thrive-ca-central-1/images/welcome1.png" />
        </mj-column>
      </mj-section>

      <mj-section background-color="#fdfdfd" padding-bottom="20px" padding-top="20px">
        <mj-column width="50%">
          <mj-image width="200" src="https://s3.ca-central-1.amazonaws.com/public-resources-thrive-ca-central-1/images/welcome2.png" />
        </mj-column>
        <mj-column width="50%">
          <mj-text align="left" color="#414042" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="25px 50px">
            Create short, medium, and long term goals.
          </mj-text>
        </mj-column>
      </mj-section>

      <mj-section background-color="#979797" padding="10px">
        <mj-column vertical-align="top" width="100%">
          <mj-text align="center" color="#ffffff" font-size="20px" font-family="Lato, Helvetica, Arial, sans-serif" padding="10px 25px">
            Have questions? <br /><br /> help@thrivesavings.com
          </mj-text>
        </mj-column>
      </mj-section>
    </mj-container>
  </mj-body>
</mjml>